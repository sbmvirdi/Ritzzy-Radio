<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/_dash_happ_icon"
            android:src="@drawable/happenings"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ritzzy Happenings!"
            android:id="@+id/_text_happ"
            android:fontFamily="@font/bubblegum_sans"
            android:textAlignment="center"
            android:layout_toRightOf="@id/_dash_happ_icon"
            android:layout_marginTop="60dp"
            android:textColor="#D2D0CE"
            android:textSize="30sp"/>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/_text_happ"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:indeterminate="true" />
    </RelativeLayout>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:id="@+id/rc_dashboard"
    android:layout_height="wrap_content">

</android.support.v7.widget.RecyclerView>
</LinearLayout>
</RelativeLayout>